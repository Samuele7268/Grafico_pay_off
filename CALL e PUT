<body>
    <h2>Grafico Payoff Opzioni</h2>
    <div class="input-container">
        <label for="strikePrice">Prezzo di esercizio (K): </label>
        <input type="number" id="strikePrice" value="50" step="1">
        <label for="premium">Premio pagato (C): </label>
        <input type="number" id="premium" value="5" step="0.1">
    </div>
    <div class="tooltip">
        <canvas id="payoffChart" width="800" height="400"></canvas>
        <span class="tooltiptext">Payoff netto di opzioni: profitto/perdita in base al prezzo dell'asset</span>
    </div>

    <script>
        // Parametri iniziali delle opzioni
        let K = 50;  // Prezzo di esercizio
        let C = 5;   // Premio pagato
        const maxPrice = 100; // Prezzo massimo dell'attività
        const step = 1;      // Incremento del prezzo
        const minPrice = 0;   // Prezzo minimo dell'attività

        // Inizializzazione del grafico
        const ctx = document.getElementById('payoffChart').getContext('2d');
        let payoffChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [],
                datasets: [
                    {
                        label: 'Long Call (€)',
                        data: [],
                        borderColor: 'rgb(75, 192, 192)',
                        tension: 0.1,
                        fill: false
                    },
                    {
                        label: 'Short Call (€)',
                        data: [],
                        borderColor: 'rgb(255, 99, 132)',
                        tension: 0.1,
                        fill: false
                    },
                    {
                        label: 'Long Put (€)',
                        data: [],
                        borderColor: 'rgb(54, 162, 235)',
                        tension: 0.1,
                        fill: false
                    },
                    {
                        label: 'Short Put (€)',
                        data: [],
                        borderColor: 'rgb(255, 206, 86)',
                        tension: 0.1,
                        fill: false
                    }
                ]
            },
            options: {
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Prezzo dell\'attività sottostante'
                        },
                        grid: {
                            drawOnChartArea: true
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Payoff Netto (€)'
                        },
                        beginAtZero: true
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                label += context.parsed.y + ' €';
                                return label;
                            }
                        }
                    },
                    annotation: {
                        annotations: {
                            strikeLine: {
                                type: 'line',
                                xMin: K,
                                xMax: K,
                                borderColor: 'rgba(255, 99, 132, 0.5)',
                                borderWidth: 2,
                                borderDash: [5, 5],
                                label: {
                                    display: true,
                                    content: 'Strike Price',
                                    position: 'start',
                                    backgroundColor: 'rgba(255, 99, 132, 0.8)',
                                    color: 'white'
                                }
                            },
                            breakEvenCallLine: {
                                type: 'line',
                                xMin: K + C,
                                xMax: K + C,
                                borderColor: 'rgba(54, 162, 235, 0.5)',
                                borderWidth: 2,
                                borderDash: [5, 5],
                                label: {
                                    display: true,
                                    content: 'Break-Even Call',
                                    position: 'start',
                                    backgroundColor: 'rgba(54, 162, 235, 0.8)',
                                    color: 'white'
                                }
                            },
                            breakEvenPutLine: {
                                type: 'line',
                                xMin: K - C,
                                xMax: K - C,
                                borderColor: 'rgba(255, 206, 86, 0.5)',
                                borderWidth: 2,
                                borderDash: [5, 5],
                                label: {
                                    display: true,
                                    content: 'Break-Even Put',
                                    position: 'start',
                                    backgroundColor: 'rgba(255, 206, 86, 0.8)',
                                    color: 'white'
                                }
                            }
                        }
                    }
                }
            }
        });

        // Funzione per calcolare e aggiornare il grafico
        function updateChart() {
            // Leggi i valori dagli input
            K = parseFloat(document.getElementById('strikePrice').value) || 50;
            C = parseFloat(document.getElementById('premium').value) || 5;

            // Calcolo dei dati del payoff
            const labels = [];
            const longCallData = [];
            const shortCallData = [];
            const longPutData = [];
            const shortPutData = [];

            for (let S_T = minPrice; S_T <= maxPrice; S_T += step) {
                labels.push(S_T.toFixed(2));

                // Long Call
                const longCallLordo = Math.max(0, S_T - K);
                const longCallNetto = longCallLordo - C;
                longCallData.push(longCallNetto);

                // Short Call
                const shortCallLordo = Math.max(0, S_T - K);
                const shortCallNetto = -shortCallLordo + C;
                shortCallData.push(shortCallNetto);

                // Long Put
                const longPutLordo = Math.max(0, K - S_T);
                const longPutNetto = longPutLordo - C;
                longPutData.push(longPutNetto);

                // Short Put
                const shortPutLordo = Math.max(0, K - S_T);
                const shortPutNetto = -shortPutLordo + C;
                shortPutData.push(shortPutNetto);
            }

            // Aggiorna il grafico
            payoffChart.data.labels = labels;
            payoffChart.data.datasets[0].data = longCallData;
            payoffChart.data.datasets[1].data = shortCallData;
            payoffChart.data.datasets[2].
